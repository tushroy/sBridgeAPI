<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.nych.demoApp.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receiver"
        android:id="@+id/receiverActivityButton"
        android:layout_above="@+id/broadcastActivityButton"
        android:layout_alignLeft="@+id/broadcastActivityButton"
        android:layout_alignStart="@+id/broadcastActivityButton"
        android:layout_marginBottom="48dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender"
        android:id="@+id/broadcastActivityButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SoundBeacon"
        android:id="@+id/soundBeaconButton"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/broadcastActivityButton"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/configurationSpinner"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:spinnerMode="dropdown"/>
</RelativeLayout>
